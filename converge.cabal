cabal-version: 2.2

name:        converge
version:     0.0.0.0
-- synopsis:
-- description:
author:      Evan Relf <evan@evanrelf.com>
maintainer:  Evan Relf <evan@evanrelf.com>
homepage:    https://github.com/evanrelf/converge
bug-reports: https://github.com/evanrelf/converge/issues
license:     ISC
copyright:   2020 Evan Relf
build-type:  Simple


--------------------------------------------------------------------------------
-- Common
--------------------------------------------------------------------------------


common no-prelude
  build-depends:
    , base ^>= 4.12.0.0
  mixins:
    , base hiding (Prelude)
  default-language: Haskell2010
  default-extensions:
    DeriveAnyClass
    DeriveFunctor
    DeriveGeneric
    DerivingStrategies
    GeneralizedNewtypeDeriving
    OverloadedStrings
  ghc-options:
    -Wall
    -Wcompat
    -Werror=incomplete-record-updates
    -Werror=incomplete-uni-patterns
    -Werror=missing-fields
    -Werror=partial-fields
    -Widentities
    -Wmissing-home-modules
    -Wredundant-constraints
    -foptimal-applicative-do
    -fshow-warning-groups


common execuable
  ghc-options:
    -threaded
    -rtsopts
    -with-rtsopts=-N


common common
  import: no-prelude
  build-depends:
    , prelude


--------------------------------------------------------------------------------
-- Libraries
--------------------------------------------------------------------------------


library prelude
  import: no-prelude
  hs-source-dirs: prelude
  exposed-modules:
    Prelude
  build-depends:
    , relude ^>= 0.6.0.0


library
  import: common
  hs-source-dirs: src
  exposed-modules:
    Control.Carrier.GitHub.IssueComments
    Control.Effect.GitHub.IssueComments
    Converge
  build-depends:
    , fused-effects ^>= 1.0.0.0
    , github
    , servant-github-webhook
    , servant-server
    , vector


--------------------------------------------------------------------------------
-- Executables
--------------------------------------------------------------------------------


executable converge
  import: common, execuable
  main-is: Main.hs
  hs-source-dirs: app
  build-depends:
    , converge
    , servant-server
    , warp


--------------------------------------------------------------------------------
-- Tests
--------------------------------------------------------------------------------


test-suite test
  import: common, execuable
  type: exitcode-stdio-1.0
  main-is: Main.hs
  hs-source-dirs: test
  build-depends:
    , converge
